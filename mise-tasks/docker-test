#!/usr/bin/env bash
#MISE description="Run the Prong tests inside Docker container"

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
cd "${PROJECT_ROOT}"

IMAGE_NAME="prong-builder"
TAG="${PRONG_DOCKER_TAG:-latest}"

# Pass host user ID and group ID to container
USER_ID=$(id -u)
GROUP_ID=$(id -g)

echo "Running Prong tests in Docker container..."
docker run --rm \
  -e HOST_USER_ID="${USER_ID}" \
  -e HOST_GROUP_ID="${GROUP_ID}" \
  -v "${PROJECT_ROOT}:/workspace" \
  -w /workspace \
  "${IMAGE_NAME}:${TAG}" \
  mise test "$@"
