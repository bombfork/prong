#!/usr/bin/env bash
#MISE description="Open an interactive shell inside the Docker container"

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
cd "${PROJECT_ROOT}"

IMAGE_NAME="prong-builder"
TAG="${PRONG_DOCKER_TAG:-latest}"

echo "Opening interactive shell in Docker container..."
docker run --rm -it \
  -v "${PROJECT_ROOT}:/workspace" \
  -w /workspace \
  "${IMAGE_NAME}:${TAG}" \
  /bin/bash
